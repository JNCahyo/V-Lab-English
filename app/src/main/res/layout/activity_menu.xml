<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:ignore="HardcodedText,SmallSp,ContentDescription">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/twh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif"
        android:text="Kementerian Pendidikan dan Kebudayaan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        android:text="Balai Pengembangan Multimedia Pendidikan dan Kebudayaan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="8sp" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="138dp"
            android:layout_height="115dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/vlab" />

        <ImageView
            android:id="@+id/eng"
            android:layout_width="158dp"
            android:layout_height="104dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/eng" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_Listening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="#00000000"
            android:src="@drawable/button_listening" />

        <ImageButton
            android:id="@+id/image_qna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:background="#00000000"
            android:src="@drawable/button_quiz" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="12dp"
        android:background="#00000000"
        app:srcCompat="@drawable/button_help" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Ready to Practice?"
            android:textColor="#000"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>