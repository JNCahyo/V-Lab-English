<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListeningActivity"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:ignore="HardcodedText,SmallSp,ContentDescription">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/twh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif"
        android:text="Kementerian Pendidikan dan Kebudayaan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        android:text="Balai Pengembangan Multimedia Pendidikan dan Kebudayaan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="145dp"
            android:layout_height="94dp"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/vlab" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="171dp"
            android:layout_height="73dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="100dp"
            app:srcCompat="@drawable/eng" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSkorSertifikat"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/menu"
        android:gravity="center"
        android:padding="10dp"
        android:text="SKOR : 100"
        android:textColor="#000"
        android:textSize="36sp"/>

    <Button
        android:id="@+id/Getme"
        android:layout_above="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="#0000"
        android:text="Get Sertificate"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_home"
        android:textSize="20sp"/>


</RelativeLayout>